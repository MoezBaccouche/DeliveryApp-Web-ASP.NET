@model DeliveryApp.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Nouveau produit";
    ViewBag.CurrentView = "Produit";
}

<h1>Nouveau produit</h1>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h3>Informations</h3>
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="Product.Name" class="bmd-label-floating">Nom</label>
                            <input type="text" asp-for="Product.Name" class="form-control">
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.Description" class="bmd-label-floating"></label>
                            <input type="text" asp-for="Product.Description" class="form-control">
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-3 col-md-3 col-lg-3">
                                    <label asp-for="Product.Price" class="bmd-label-floating">Prix</label>
                                    <input type="text" asp-for="Product.Price" class="form-control">
                                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                                    
                                </div>
                                <div class="col-sm-3 col-md-3 col-lg-3">
                                    <select class="form-control" id="units" asp-for="Product.ProductUnit" asp-items="Model.Units">
                                    </select>
                                    <span asp-validation-for="Product.ProductUnit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="categories">Catégorie</label>
                                <select class="form-control" id="categories" name="categories">
                                    @foreach(var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <input type="submit" value="Ajouter" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h3>Photos</h3>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="file-field">
                            <div class="btn btn-default btn-sm">
                                <span>Image</span>
                                <input type="file" name="files" multiple>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
