@model DeliveryApp.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Tous les produits";
    ViewBag.CurrentViewTitle = "Liste des produits";
    ViewBag.CurrentController = "Product";
    ViewBag.CurrentAction = "AllProducts";
}
<h1>Tous les produits</h1>

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Data Table</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Prix</th>
                            <th>Catégorie</th>
                            <th>Opération</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.AllProducts)
                        {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price DT</td>
                            @* Must be changed, not optimal *@
                            @foreach (var category in Model.Categories)
                            {
                                if (product.CategoryId == category.Id)
                                {
                                    <td>@category.Name</td>
                                    break;
                                }
                            }
                            <td class="text-center">
                                <a href="#"><i style="font-size: 20px;" class="fa fa-pencil text-info "></i></a>
                                <a href="#"><i style="font-size: 20px; margin-left: 10px" class="fa fa-trash text-danger"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>