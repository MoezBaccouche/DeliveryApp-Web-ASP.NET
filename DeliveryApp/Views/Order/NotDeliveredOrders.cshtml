@model DeliveryApp.Models.ViewModels.OrdersViewModel
@{
    ViewData["Title"] = "NotDeliveredOrders";
    ViewBag.CurrentController = "Order";
    ViewBag.CurrentAction = "NotDeliveredOrders";
    ViewBag.CurrentViewTitle = "Commandes en attente";
}

<h1>Commandes en attente</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Data Table</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Heure commande</th>
                            <th>Client</th>
                            <th>Opération</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.NotDeliveredOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.OrderTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.Client.FirstName @order.Client.LastName</td>
                                <td class="text-center"><a href="#"><i style="font-size: 20px" class="fa fa-plus-circle text-info"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>